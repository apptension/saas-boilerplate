{
  "name": "webapp",
  "version": "4.1.1",
  "private": true,
  "scripts": {
    "extract-intl": "formatjs extract 'src/**/!(*.d).(js|jsx|ts|tsx)' '../webapp-libs/*/src/**/!(*.d).(js|jsx|ts|tsx)' --id-interpolation-pattern '[sha512:contenthash:base64:6]' --out-file ../webapp-libs/webapp-core/src/translations/en.json --ignore src/tests/mocks/** --ignore ../webapp-libs/*src/tests/mocks/**",
    "lint": "pnpm run lint:js && pnpm run lint:css",
    "lint:css": "stylelint './src/**/*.ts'",
    "lint:js": "eslint .",
    "verify": "node ./scripts/verify.js",
    "storybook": "pnpm nx run webapp-emails:build && /bin/bash scripts/start-storybook.sh",
    "build-storybook": "storybook build",
    "start": "pnpm nx start:app",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit --project tsconfig.app.json"
  },
  "dependencies": {
    "intl": "^1.2.5",
    "lucide-react": "^0.378.0",
    "qrcode": "^1.5.3",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@formatjs/cli": "^6.2.12",
    "@formatjs/intl-getcanonicallocales": "^2.3.0",
    "@formatjs/intl-pluralrules": "^5.2.14",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@sb/core": "workspace:*",
    "@sb/infra-core": "workspace:*",
    "@sb/infra-shared": "workspace:*",
    "@sb/tools": "workspace:*",
    "@sb/webapp-api-client": "workspace:*",
    "@sb/webapp-contentful": "workspace:*",
    "@sb/webapp-core": "workspace:*",
    "@sb/webapp-crud-demo": "workspace:*",
    "@sb/webapp-documents": "workspace:*",
    "@sb/webapp-finances": "workspace:*",
    "@sb/webapp-generative-ai": "workspace:*",
    "@sb/webapp-notifications": "workspace:*",
    "@sb/webapp-tenants": "workspace:*",
    "@storybook/addon-essentials": "^8.1.3",
    "@storybook/addon-measure": "^8.1.3",
    "@storybook/addon-themes": "^8.1.3",
    "@storybook/cli": "^8.1.3",
    "@storybook/client-api": "^7.6.17",
    "@storybook/client-logger": "^8.1.3",
    "@storybook/react-vite": "^8.5.3",
    "@types/qrcode": "^1.5.5",
    "@vitejs/plugin-legacy": "^5.4.3",
    "autoprefixer": "^10.4.19",
    "inquirer-directory": "^2.2.0",
    "jest-mock": "^29.7.0",
    "postcss": "^8.4.38",
    "postcss-styled-syntax": "^0.6.4",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "storybook": "^8.1.3",
    "storybook-dark-mode": "^4.0.1",
    "storybook-react-router": "^1.0.8",
    "stylelint": "^16.6.0",
    "stylelint-config-standard": "^36.0.0"
  }
}
