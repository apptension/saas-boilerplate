{
  "name": "core",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/internal/core/src",
  "projectType": "library",
  "targets": {
    "setup-env": {
      "executor": "@saas-boilerplate-app/tools:setup",
      "options": {
        "cwd": "./"
      }
    },
    "setup": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "cwd": "packages/internal/core",
        "command": "nx docker-create-volumes"
      },
      "dependsOn": [
        "setup-env"
      ]
    },
    "docker-create-volumes": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "cwd": "packages/internal/core",
        "command": "/bin/bash ./scripts/docker-create-volumes.sh"
      }
    },
    "docker-login": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "cwd": "packages/internal/core",
        "command": "/bin/bash ./scripts/docker-login.sh"
      }
    },
    "docker-compose:up": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "parallel": false,
        "commands": [
          "nx run-many --target=compose-build-image --projects=backend,workers",
          "docker-compose up --force-recreate -d backend workers"
        ]
      },
      "dependsOn": [
        "setup"
      ]
    },
    "docker-compose:down": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "parallel": false,
        "commands": [
          "docker-compose down"
        ]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "color": true,
        "commands": [
          "nx docker-compose:up",
          "nx run webapp:start"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/internal/core/**/*.ts"
        ]
      }
    }
  },
  "tags": []
}
